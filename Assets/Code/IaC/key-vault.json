{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "administratorObjectId": {
            "type": "string"
        },
        "apiAppRegistrationApplicationId": {
            "type": "string"
        },
        "basicAuthenticationPassword": {
            "type": "string"
        },
        "general": {
            "defaultValue": {
                "location": "[resourceGroup().location]",
                "tags": {
                    "LastModifiedDate": "[utcNow()]",
                    "Project": "Building better security for your API platform using Azure API Management",
                    "Purpose": "Session"
                }
            },
            "type": "object"
        },
        "keyVault": {
            "defaultValue": {
                "name": "kv-api-platform",
                "secrets": {
                    "apiAppRegistrationApplicationId2": "ApiAppRegistrationApplicationId",
                    "basicAuthenticationPassword": "BasicAuthenticationPassword"
                }
            },
            "type": "object"
        }
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2016-10-01",
            "name": "[parameters('keyVault').name]",
            "location": "[parameters('general').location]",
            "tags": "[parameters('general').tags]",
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "Standard"
                },
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": [
                ],
                "enabledForDeployment": false,
                "enabledForDiskEncryption": false,
                "enabledForTemplateDeployment": true,
                "enableSoftDelete": true
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "name": "[concat(parameters('keyVault').name, '/', parameters('keyVault').secrets.basicAuthenticationPassword)]",
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVault').name)]"
            ],
            "properties": {
                "value": "[parameters('basicAuthenticationPassword')]",
                "attributes": {
                    "enabled": true
                }
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "name": "[concat(parameters('keyVault').name, '/', parameters('keyVault').secrets.apiAppRegistrationApplicationId2)]",
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVault').name)]"
            ],
            "properties": {
                "value": "[parameters('apiAppRegistrationApplicationId')]",
                "attributes": {
                    "enabled": true
                }
            }
        }
    ]
}