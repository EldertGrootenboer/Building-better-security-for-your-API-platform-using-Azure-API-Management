{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "gitHub": {
            "defaultValue": {
                "baseUri": "https://raw.githubusercontent.com/EldertGrootenboer/Azure-Resource-Manager-in-A-Serverless-World/master/assets/demo-3-deployment/"
            },
            "type": "object"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "applicationInsights",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "keyVault",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'key-vault.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "appService",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'applicationInsights')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'app-service.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "apiManagement",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'applicationInsights')]",
                "[resourceId('Microsoft.Resources/deployments', 'keyVault')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'api-management.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "apiCleanAPI",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'apiManagement')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'api-management-api-0-clean-api.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "apiBasicAuthentication",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'apiManagement')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'api-management-api-1-basic-authentication.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "apiOauth",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'apiManagement')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'api-management-api-2-oauth.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "apiHttps",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'apiManagement')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'api-management-api-3-https.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "apiCatchErrors",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'apiManagement')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'api-management-api-4-catch-errors.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "apiRemoveSensitiveData",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'apiManagement')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'api-management-api-5-remove-sensitive-data.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "apiThrottling",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'apiManagement')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'api-management-api-6-throttling.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "apiLogging",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'apiManagement')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'api-management-api-7-logging.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "apiLoaderIoValidation",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'apiManagement')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, 'api-management-api-loader-io-validation.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        }
    ]
}
